<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <display-name>LoginController</display-name>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>  <!--định tuyến -->
    </servlet-mapping>

    <servlet>
        <display-name>AddRequestController</display-name>
        <servlet-name>AddRequestController</servlet-name>
        <servlet-class>controller.AddRequestController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddRequestController</servlet-name>
        <url-pattern>/add</url-pattern>  <!--định tuyến -->
    </servlet-mapping>

    <servlet>
        <display-name>ListController</display-name>
        <servlet-name>ListController</servlet-name>
        <servlet-class>controller.ListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListController</servlet-name>
        <url-pattern>/list</url-pattern>  <!--định tuyến -->
    </servlet-mapping>

    <servlet>
        <display-name>RequestDetailsController</display-name>
        <servlet-name>RequestDetailsController</servlet-name>
        <servlet-class>controller.RequestDetailsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestDetailsController</servlet-name>
        <url-pattern>/details</url-pattern>  <!--định tuyến -->
    </servlet-mapping>

</web-app>

